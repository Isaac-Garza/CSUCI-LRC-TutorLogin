<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:weightSum="6"
    tools:context=".AddTutor">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/add_page_title"

          android:layout_gravity="center"
          android:textSize="30sp"
          android:textColor="@android:color/black" />

    <!--    Name of New Employee    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/employee_id"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tutor_id"
            android:layout_width="265dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!--    Name of New Employee    -->
    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

     <TextView
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:layout_weight="1"
      android:text="@string/employee_name"
      android:textSize="20sp"
      android:layout_gravity="start" />

        <EditText
            android:id="@+id/tutor_name"
            android:layout_width="303dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/input_name" />
    </LinearLayout>

    <!--    Role of New Employee    -->
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="start"
           android:layout_weight="1"
           android:gravity="center_vertical"
           android:text="@string/employee_role"
           android:textSize="20sp" />

        <EditText
            android:id="@+id/tutor_role"
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/input_role" />
    </LinearLayout>

    <!--    Subject(s) of New Employee    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/employee_subjects"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/tutor_subject"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="@string/input_subjects" />
    </LinearLayout>

    <!--    Days for New Employee    -->
    <TextView
    android:layout_width="70dp"
    android:layout_height="0dp"
    android:layout_gravity="start"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:text="@string/employee_days"
    android:textSize="20sp" />

<!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:background="@android:color/darker_gray"/>-->

    <!--    Hours of New Employee    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Sunday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Monday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Tuesday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Wednesday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Thursday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Friday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:text="@string/Saturday"
            android:layout_height="wrap_content"
            android:layout_width="75dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/time_array"
            android:prompt="@string/time_prompt" />



    </LinearLayout>


    <Button
        android:id="@+id/add_tutor_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/submit_button"/>

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/cancel_button"/>



</LinearLayout>